---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import "../styles/global.css";


export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body class="bg-grey-500 text-platinum-700 text-lg leading-8">
    <slot name="header" />
    <main class="pt-20">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
